<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheetMoreDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#121211"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:gravity="center"
                android:padding="15dp"
                android:text="Profile"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/wallpaperTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:gravity="center"
                android:padding="15dp"
                android:text="Set Wallpaper"
                android:visibility="gone"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/clearTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:gravity="center"
                android:padding="15dp"
                android:text="Clear Chat"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/blockTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:gravity="center"
                android:padding="15dp"
                android:text="Block"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/reportTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:gravity="center"
                android:padding="15dp"
                android:text="Report"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/top_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/logout_design"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</RelativeLayout>
